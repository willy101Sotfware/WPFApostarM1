<UserControl x:Class="WPFApostar.UserControls.Betplay.PreviewFacture"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls.Betplay"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
     >

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
        </Grid.Background>


        <Image Source="/Images/Others/IcoApostar.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="208" Width="540" Margin="0,56,0,0"/>

        <Image Source="/Images/Others/TxtDivierteteGris.png"
                   HorizontalAlignment="Center"
                              Visibility="Hidden"
                   VerticalAlignment="Top" Height="124" Width="672" Margin="0,309,0,0"/>

        <TextBlock 
            x:Name="tbTimer"
            FontSize="45"
            Foreground="White"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

        <Image Source="/Images/Backgrounds/BgPay.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="1503" Width="1026" Margin="0,309,0,0"/>

        <Image Source="/Images/Others/txtTransaction.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Width="502" Height="56" Margin="291,319,0,0" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.16"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>


        <Image Source="/Images/Others/Colilla.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Width="700" Height="1283" Margin="0,410,0,0"/>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,683,0,0" 
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 Text="  BETPLAY-APUESTAS DEPORTIVAS
                 Autoriza COLJUEGOS Contrato C1444
                 AV. CLL 26 No.69D91 OF.802A 
                 PBX(1)5190395"
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="28"/>


        <TextBox HorizontalAlignment="Center" 
                 Margin="0,942,0,0" 
                 x:Name="TxtFecha"
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 Text=""
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="28" Foreground="White" Background="Black"/>


        <TextBox HorizontalAlignment="Center" 
                 Margin="0,1064,0,0" 
                 TextWrapping="Wrap"
                 TextAlignment="Left"
                 Text="DATOS RECARGA"
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="28" FontWeight="Bold" Background="Black" Foreground="White"/>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,1163,0,0" 
                 x:Name="TxtCedula"
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 Text=""
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="26"/>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,1247,0,0" 
                 x:Name="TxtValor"
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 Text=""
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="26"/>


        <TextBox HorizontalAlignment="Center" 
                 Margin="0,1322,0,0" 
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 Text="REALIZA TU APUESTA EN: BETPLAY.COM.CO"
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="26"/>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,1432,0,0" 
                 Name="TxtDatos"
                 TextWrapping="Wrap"
                 TextAlignment="Left"
                 Text=""
                 VerticalAlignment="Top"
                 Width="542"
                 BorderBrush="{x:Null}"
                 FontSize="25" FontWeight="Bold" Background="Black" Foreground="White"/>



        <Image Source="/Images/Buttons/btnContinuar.png" 
                   Margin="0,1764,0,0"
                   HorizontalAlignment="Center"
                   TouchDown="Btn_ContinuarTouchDown"
                   VerticalAlignment="Top" Height="96" Width="284"/>
        </Grid>
    </Viewbox>
</UserControl>
