<UserControl x:Class="WPFApostar.UserControls.Chance.InfoUC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls.Chance"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
     >

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>

        <Grid
                Grid.Row="0">

            <Image Source="/Images/Others/IcoApostar.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="208" Width="540" Margin="0,56,0,0"/>

            <Image Source="/Images/Others/TxtDivierteteGris.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="124" Width="672" Margin="0,309,0,0"/>

            <TextBlock 
            x:Name="tbTimer"
            FontSize="45"
            Foreground="White"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

        </Grid>

        <Grid
            Grid.Row="1"
            >

            <Image Source="/Images/SuperChance/Others/InputData.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="757" Width="660" Margin="0,56,0,0"/>

            <Image Source="/Images/SuperChance/Buttons/BtnJugar.png"
                   HorizontalAlignment="Center"
                   MouseDown="Btn_jugar"
                   TouchDown="BtnJugar_TouchDown"
                   VerticalAlignment="Top" Height="88" Width="304" Margin="0,710,0,0"/>

        </Grid>

        <Grid
            Grid.Row="2"
            >


            <Image Source="/Images/SuperChance/Others/IcoEfectivo.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Height="170" Width="174" Margin="184,106,0,0"/>


            <Image Source="/Images/SuperChance/Others/TxtPagoEfectivo.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Height="97" Width="540" Margin="380,142,0,0"/>

            <Image Source="/Images/SuperChance/Others/LogoEcity.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Height="60" Width="151" Margin="899,321,0,0"/>

        </Grid>

        </Grid>
    </Viewbox>
</UserControl>
