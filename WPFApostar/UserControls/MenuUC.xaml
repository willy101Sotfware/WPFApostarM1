<UserControl x:Class="WPFApostar.UserControls.MenuUC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080">
    

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">


            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/BgApostar.png"/>
            </Grid.Background>

            <TextBlock 
            x:Name="tbTimer"
            FontSize="45"
            Foreground="White"
            FontWeight="Bold"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

            <Image
            Source="/Images/Buttons/BtnBetPlay.png" 
            Margin="548,485,62,927"
            PreviewMouseDown="Btn_JugarPreviewMouseDown"
            Cursor="Hand"
            />

            <Image
            Source="/Images/Buttons/BtnChance.png" 
            Margin="51,1100,590,312"
            Visibility="Visible"
            PreviewMouseDown="Btn_ChancePreviewMouseDown"
            Cursor="Hand"
            />

            <Image
            Source="/Images/Buttons/BtnRecaudo.png" 
            Visibility="Hidden"
            PreviewMouseDown="Btn_RecaudoPreviewMouseDown"
            Cursor="Hand"
            Margin="67,960,499,512"
            />

            <Image Source="/Images/Buttons/BotonPaquetes.png" 
                Margin="71,485,0,0"
                HorizontalAlignment="Left"
                PreviewMouseDown="Btn_RechargePreviewMouseDown"
                Cursor="Hand"
                VerticalAlignment="Top" Height="508" Width="431">
            </Image>

            <Image
            Source="/Images/Others/ApostarA.png" Margin="311,24,311,1678"
            />

            <Image
            Source="/Images/Others/TxtDiviertete.png" Margin="156,195,156,1466"
            >
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </Image>




        </Grid>
    </Viewbox>
</UserControl>
