            <Image Source="/Images/Others/IcoApostar.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="178" Width="500" Margin="270,130,310,0"/>


            <TextBox Text="Estimado Cliente:"
                 VerticalAlignment="Top"
                 FontSize="65"
                 FontWeight ="Bold"
                 Foreground="Black"
                 IsReadOnly="True"
                 BorderThickness="0" Height="182" TextWrapping="Wrap"
                 Background="Transparent" Margin="253,488,253,0"
               
                 />

            <TextBox Text="Devolución en curso, un momento por favor."
                 VerticalAlignment="Top"
                 FontSize="65"
                 Foreground="Black"
                 IsReadOnly="True"
                 BorderThickness="0" Height="268" TextWrapping="Wrap"
                 Background="Transparent" Margin="190,861,190,0"
               
                 />





        </Grid>
    </Viewbox>
</UserControl>
