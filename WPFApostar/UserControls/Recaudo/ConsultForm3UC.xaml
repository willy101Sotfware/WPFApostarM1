                   Visibility="Visible"
                   VerticalAlignment="Top" Height="50" Width="226" Margin="679,241,0,0"/>

            <Image Source="/Images/Buttons/txt_Contrato.png"
                   HorizontalAlignment="Left"
                   x:Name="TxtContrato"
                   TouchDown="SelectTouchDown"
                   Visibility="Visible"
                   VerticalAlignment="Top" Height="50" Width="226" Margin="275,241,0,0"/>

            <TextBox HorizontalAlignment="Center"
                     Margin="0,364,0,0"
                     x:Name="TxtReference"
                     FontWeight="Bold" 
