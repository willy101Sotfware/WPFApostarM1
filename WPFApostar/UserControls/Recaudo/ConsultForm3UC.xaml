                   x:Name="CheckFactura"
                   TouchDown="SelectFacturaTouchDown"
                   Visibility="Visible"
                   VerticalAlignment="Top" Height="58" Width="91" Margin="195,231,0,0"/>

            <Image Source="/Images/Buttons/Check2.png"
                   HorizontalAlignment="Left"
                   x:Name="CheckContrato"
                   TouchDown="SelectTouchDown"
                   Visibility="Visible"
                   VerticalAlignment="Top" Height="58" Width="92" Margin="604,234,0,0"/>

            <Image Source="/Images/Buttons/CheckSI.png"
                   HorizontalAlignment="Left"
                   x:Name="CheckFacturaSi"
                   TouchDown="SelectFacturaTouchDown"
                   Visibility="Hidden"
                   VerticalAlignment="Top" Height="54" Width="86" Margin="607,233,0,0"/>

            <Image Source="/Images/Buttons/CheckSI.png"
                   HorizontalAlignment="Left"
                   x:Name="CheckContratoSi"
                   TouchDown="SelectTouchDown"
                   Visibility="Visible"
                   VerticalAlignment="Top" Height="53" Width="56" Margin="199,232,0,0"/>

            <Image Source="/Images/Buttons/txt_Factura.png"
                   HorizontalAlignment="Left"
                   x:Name="TxtFactura"
