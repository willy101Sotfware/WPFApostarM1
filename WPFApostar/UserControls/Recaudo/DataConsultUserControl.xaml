<UserControl x:Class="WPFApostar.UserControls.Recaudo.DataConsultUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls.Recaudo"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
     >

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png" Stretch="Uniform"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="600" />
            <RowDefinition Height="*" />
            <RowDefinition Height="500" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="/Images/Buttons/btnAtras.png"
                   Name="btn_back"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Width="137"
                   TouchDown="Btn_back_TouchDown" Margin="55,0,0,427" Height="140" />


            <Image Source="/Images/Others/IcoApostar.png"
                 Tag="0" 
                   Margin="247,114,247,300"/>

            <TextBlock 
            x:Name="tbTimer"
            FontSize="45"
            Foreground="Black"
            FontWeight="Bold"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

            <Label Content="" 
                   Name="Company"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="50"
                   HorizontalContentAlignment="Center"
                   Margin="0,403,0,0"
                   VerticalAlignment="Top"
                   Height="86"
                   Width="970"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="/Images/Others/ImgReferencia.png"
                   Grid.Column="0"
                 Tag="0" Margin="20,21,20,21"/>

            <Image Source="/Images/Others/txtFechalimite.png"
                   Grid.Column="1"
                 Tag="0" Margin="20,21,20,21"/>

            <Image Source="/Images/Others/ImgValor.png"
                   Grid.Column="2"
                 Tag="0" Margin="20,21,20,21"/>


            <Image Source="/Images/Others/ImgSeleccione.png"
                   Grid.Column="3"
                 Tag="0" Margin="20,21,20,21"/>

            <ListView 
                x:Name="lv_Products"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                ItemsSource="{Binding}"
                Margin="0,0,0,0"
                Grid.Row="1"
                Grid.ColumnSpan="7"
                Background="Transparent"
                BorderBrush="Transparent"
                AutomationProperties.AutomationId="ItemGridView"
                AutomationProperties.Name="Grouped Items"
                >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}"
                        >
                        <EventSetter Event="PreviewMouseDown"
                         Handler="ListViewItem_PreviewMouseDown" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter>
                                    </ContentPresenter>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel 
                            Orientation="Vertical" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch">
                            <Grid 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,20,0,0"
                                Width="1070"
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    Text="{Binding Referencia}"
                                    FontSize="20"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="0"
                                />
                                <TextBlock 
                                    Text="{Binding FechaLimite}"
                                    FontSize="20"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="1"
                                />
                                <TextBlock 
                                    Text="{Binding Value, StringFormat={}{0:C0}}"
                                    FontSize="35"
                                    TextAlignment="Center"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="2"
                                />
                                <Image  
                                    Source="{Binding img}"
                                    Width="45"
                                    Height="45"
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                />

                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Image Source="/Images/Others/txtValorTotal.png"
                Grid.Row="2"
                 Tag="0" Margin="745,26,48,413"/>

        <Image Source="/Images/Buttons/btnContinuar.png"
                   HorizontalAlignment="Left"
                   Grid.Row="2"
                   VerticalAlignment="Top"
                   Width="303"
                   TouchDown="Btn_Continuar" Margin="767,203,0,0" Height="90" />

        <Label            
            Content="{Binding ValorPagar, StringFormat={}{0:C0}}"
            HorizontalAlignment="Left"
            FontSize="45"
            x:Name="ValueT"
            Margin="831,98,0,0"
            Grid.Row="2"
            VerticalAlignment="Top"/>




        </Grid>
    </Viewbox>
</UserControl>
