<UserControl x:Class="WPFApostar.UserControls.Recaudo.PaymentUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls.Recaudo"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080">

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="200" />
            <RowDefinition Height="500" />
            <RowDefinition Height="260" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Image Source="/Images/Others/IcoApostar.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="94" Width="296" Margin="0,51,0,0"/>

            <TextBlock 
                Text="Ingrese el dinero indicado"
                FontSize="60"
                Width="500"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Margin="0,0,0,0"
                FontFamily="Myriad Pro"
                FontWeight="Bold"
                Foreground="#FFC00019"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center" />

        </Grid>
        <Grid Grid.Row="1">
            <TextBlock 
                Text="DENOMINACION"
                FontSize="35"
                TextAlignment="Center"
                Margin="75,0,0,0"
                FontFamily="Myriad Pro"
                FontWeight="Bold"
                Foreground="Black"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left" />

            <TextBlock 
                Text="CANTIDAD"
                FontSize="35"
                TextAlignment="Center"
                Margin="70,0,0,0"
                FontFamily="Myriad Pro"
                FontWeight="Bold"
                Foreground="Black"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center" />

            <TextBlock 
                Text="TOTAL($)"
                FontSize="35"
                TextAlignment="Center"
                Margin="0,0,100,0"
                FontFamily="Myriad Pro"
                FontWeight="Bold"
                Foreground="Black"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right" />
        </Grid>

        <Grid Grid.Row="2">
            <ListView x:Name="lv_denominations" 
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    ItemsSource="{Binding}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"
                                     VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center"
                            VerticalAlignment="Top" Background="Transparent"
                            Margin="0,0,0,0"
                            Width="1000"
                            Height="50"
                              >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                    Text="{Binding Denominacion, StringFormat={}{0:C0}}"
                                    FontSize="38"
                                    FontFamily="Myriad Pro"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    Foreground="Black"
                                    Width="500"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="0"
                           />
                            <TextBlock 
                                    Text="{Binding Quantity}"
                                    FontSize="38"
                                     FontFamily="Myriad Pro"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Grid.Column="1"
                           />
                            <TextBlock 
                                    Text="{Binding Total, StringFormat={}{0:C0}}"
                                     FontSize="38"
                                    FontFamily="Myriad Pro"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Grid.Column="2" 
                           />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="3">
            <TextBlock 
                Text="VALOR INGRESADO"
                FontSize="30"
                TextAlignment="Center"
                Margin="85,0,0,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding ValorIngresado, StringFormat={}{0:C0}}"
                FontSize="45"
                TextAlignment="Center"
                Margin="0,0,85,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
             />
            <TextBlock 
                Text="VALOR FALTANTE"
                FontSize="30"
                TextAlignment="Center"
                Margin="85,60,0,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding ValorFaltante, StringFormat={}{0:C0}}"
                FontSize="45"
                TextAlignment="Center"
                Margin="0,60,85,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
             />

            <TextBlock 
                Text="VALOR SOBRANTE"
                FontSize="30"
                TextAlignment="Center"
                Margin="85,120,0,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding ValorSobrante, StringFormat={}{0:C0}}"
                FontSize="45"
                TextAlignment="Center"
                Margin="0,120,85,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
             />
            <TextBlock 
                Text="VALOR TOTAL TRANSACCION"
                FontSize="30"
                TextAlignment="Center"
                Margin="85,180,0,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding PayValue, StringFormat={}{0:C0}}"
                FontSize="45"
                TextAlignment="Center"
                Margin="0,180,85,0"
                FontFamily="Myriad Pro"
                Foreground="Black"
                FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
             />
        </Grid>
        <Grid Grid.Row="4">
            <Image x:Name="btnCancell"
                   Source="/Images/Buttons/BtnCancelar.png"
                   Width="298"
                   Height="80"
                   Visibility="{Binding ImgCancel}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="102,54,0,0"
                   TouchDown="BtnCancell_TouchDown" />


        </Grid>
        </Grid>
    </Viewbox>
</UserControl>
