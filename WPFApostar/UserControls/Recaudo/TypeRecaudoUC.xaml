<UserControl x:Class="WPFApostar.UserControls.Recaudo.TypeRecaudoUC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApostar.UserControls.Recaudo"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080">

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Grid
                Grid.Row="0">

            <Image Source="/Images/Others/IcoApostar.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="149" Width="427" Margin="0,51,0,0"/>

            <Image Source="/Images/Buttons/BtnAtras.png"
                   HorizontalAlignment="Left"
                   TouchDown="BtnAtras_TouchDown"
                   VerticalAlignment="Top" Height="108" Width="112" Margin="76,51,0,0"/>


            <Image Source="/Images/Others/txt_recaudos.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="80" Width="428" Margin="0,255,0,0"/>

            <TextBlock 
            x:Name="tbTimer"
            FontSize="45"
            FontWeight="Bold"
            Foreground="Black"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

        </Grid>

        <Grid Grid.Row="1">

            <Image Source="/Images/Backgrounds/BgPay.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Height="1238" Width="850"/>

            <Image Source="/Images/Others/IcoApostar3.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Height="227" Width="236" Margin="0,-63,0,0"/>

            <Image Source="/Images/Buttons/Btn-Salud.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Salud"
                   VerticalAlignment="Top" Height="219" Width="216" Margin="180,205,0,0"/>

            <Image Source="/Images/Buttons/Btn_Recaudos.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Recaudo"
                   VerticalAlignment="Top" Height="219" Width="216" Margin="696,205,0,0"/>

            <Image Source="/Images/Buttons/Btn_Financiero.png"
                   HorizontalAlignment="Center"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Financiero"
                   VerticalAlignment="Top" Height="219" Width="216" Margin="0,205,0,0"/>

            <Image Source="/Images/Buttons/Btn_cooperativas.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Cooperativas"
                   VerticalAlignment="Top" Height="218" Width="216" Margin="179,463,0,0"/>

            <Image Source="/Images/Buttons/Btn_funerarias.png"
                   HorizontalAlignment="Center"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Funerarias"
                   VerticalAlignment="Top" Height="218" Width="216" Margin="0,463,0,0"/>

            <Image Source="/Images/Buttons/Btn_prensa.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Prensa"
                   VerticalAlignment="Top" Height="218" Width="216" Margin="695,463,0,0"/>

            <Image Source="/Images/Buttons/Btn_seguros.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Seguros"
                   VerticalAlignment="Top" Height="219" Width="216" Margin="178,720,0,0"/>

            <Image Source="/Images/Buttons/Btn_servicios.png"
                   HorizontalAlignment="Center"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Servicios"
                   VerticalAlignment="Top" Height="216" Width="222" Margin="0,720,0,0"/>

            <Image Source="/Images/Buttons/Btn_Telecomunicaciones.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Telecomunicaciones"
                   VerticalAlignment="Top" Height="216" Width="222" Margin="695,720,0,0"/>

            <Image Source="/Images/Buttons/Btn_Administraciones.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Administraciones"
                   VerticalAlignment="Top" Height="216" Width="222" Margin="177,978,0,0"/>

            <Image Source="/Images/Buttons/Btn_otros_Servicios.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="Others"
                   VerticalAlignment="Top" Height="216" Width="227" Margin="430,978,0,0"/>

            <Image Source="/Images/Buttons/Btn-todos.png"
                   HorizontalAlignment="Left"
                   TouchDown="Btn_OptionTouchDown"
                   Tag="All"
                   VerticalAlignment="Top" Height="216" Width="227" Margin="700,978,0,0"/>


        </Grid>

        </Grid>
    </Viewbox>
</UserControl>
